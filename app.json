{
  "expo": {
    "name": "Lunar Guide",
    "slug": "application-lunar",
    "version": "5.0.5",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "com.app.lunarastrologer",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#F8F4FA"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "buildNumber": "10",
      "supportsTablet": true,
      "jsEngine": "jsc",
      "bundleIdentifier": "com.app.lunarastrologer",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSLocationWhenInUseUsageDescription": "This app uses your location to...",
        "NSCameraUsageDescription": "This app requires access to your camera to allow you to scan and upload images.",
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": [
              "com.googleusercontent.apps.127341618384-4eapq3qd6fsh6vm29mu4eevu1jpc23mr"
            ]
          }
        ]
      }
    },
    "android": {
      "versionCode": 51,
      "appName": "Lunar Guide",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#ffffff"
      },
      "targetSdkVersion": 35,
      "compileSdkVersion": 35,
      "package": "com.app.lunarastrologer",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-secure-store",
        {
          "configureAndroidBackup": true,
          "faceIDPermission": "Allow $(PRODUCT_NAME) to access your Face ID biometric data."
        }
      ],
      [
        "expo-audio",
        {
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow the app to access your location even when it is closed or not in use.",
          "locationWhenInUsePermission": "Allow the app to access your location while you are using it."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "jsEngine": "hermes",
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "128848bc-27e8-4212-b492-89de88ff4888"
      }
    },
    "owner": "amankesarwani49",
    "platforms": [
      "ios",
      "web",
      "android"
    ]
  }
}
